{
  "name": "bw-server-helper",
  "version": "0.0.1",
  "description": "A Bitwarden server helper for useful tasks (like backup).",
  "author": "Leonardo Marcucci",
  "private": true,
  "license": "GNU Affero General Public License",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "run-s nest:build doc",
    "clean": "rimraf dist",
    "doc:build": "compodoc",
    "doc:clear": "rimraf docs/compodoc",
    "doc:serve": "compodoc -s",
    "doc": "run-s doc:clear doc:build",
    "docker:local": "docker compose -f docker-compose.local.yml",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "g:api-bwvaultman:clean": "rimraf src/features/bitwarden/dto",
    "g:api-bwvaultman:gen": "docker run --rm --net=host -u=\"$(id -u)\" -v ${PWD}:/local openapitools/openapi-generator-cli generate -i /local/api-defs/bw-vault-management.openapi.json --global-property models --skip-validate-spec -g typescript-nestjs -o /local/src/features/bitwarden",
    "g:api:bwvaultman": "run-s g:api-bwvaultman:clean g:api-bwvaultman:gen",
    "g:api": "run-p g:api:*",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "ncu": "npx npm-check-updates",
    "nest:build": "nest build",
    "nest:start:debug": "nest start --watch --debug=0.0.0.0:9229",
    "nest:start:dev": "nest start --watch",
    "nest:start:prod": "node dist/src/main",
    "nest:start": "nest start",
    "nest": "nest",
    "release": "semantic-release",
    "start:debug": "npm run nest:start:debug",
    "start:dev": "npm run nest:start:dev",
    "start:prod": "npm run nest:start:prod",
    "start": "npm run nest:start",
    "test:clear": "jest --clearCache",
    "test:cov": "npm run test:run -- --coverage",
    "test:debug": "cross-env NODE_OPTIONS='--inspect-brk=0.0.0.0:9229 --experimental-vm-modules -r tsconfig-paths/register -r ts-node/register' jest --runInBand --config ./test/jest.config.ts",
    "test:e2e:debug": "npm run test:debug -- --selectProjects e2e",
    "test:e2e": "npm run test:run -- --selectProjects e2e",
    "test:ext:debug": "jest --config ./test/jest.config.ts",
    "test:prep": "run-s test:clear test:trans:build",
    "test:run": "cross-env NODE_OPTIONS='--experimental-vm-modules -r tsconfig-paths/register -r ts-node/register' jest --config ./test/jest.config.ts",
    "test:trans:build": "tsc --esModuleInterop --outDir ./test/transformers/build test/transformers/*.ts",
    "test:unit:debug": "npm run test:debug --selectProjects unit",
    "test:unit": "npm run test:run -- --selectProjects unit",
    "test:watch": "npm run test:run --watch",
    "test": "npm run test:unit"
  },
  "dependencies": {
    "@nestjs/axios": "^3.0.3",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.0.0",
    "@nestjs/devtools-integration": "^0.1.6",
    "@nestjs/mapped-types": "^2.0.5",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.4.1",
    "@nestjs/schedule": "^4.1.0",
    "@nestjs/swagger": "^7.4.0",
    "date-fns": "^3.6.0",
    "dotenv": "^16.4.5",
    "dotenv-expand": "^11.0.6",
    "helmet": "^7.1.0",
    "joi": "^17.13.3",
    "lodash": "^4.17.21",
    "nestjs-pino": "^4.1.0",
    "nestjs-request-context": "^3.0.0",
    "pino-http": "^10.3.0",
    "pino-pretty": "^11.2.2",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@compodoc/compodoc": "^1.1.25",
    "@golevelup/ts-jest": "^0.5.5",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "chalk": "^5.3.0",
    "ci-info": "^4.0.0",
    "cpy-cli": "^5.0.0",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^7.4.2",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "inquirer": "^10.2.0",
    "jest": "^29.5.0",
    "make-dir-cli": "^4.0.0",
    "node-mocks-http": "^1.15.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.0",
    "rimraf": "^6.0.1",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}